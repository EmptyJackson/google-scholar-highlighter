{
  "manifest_version": 3,
  "name": "Scholar Highlights",
  "version": "1.0",
  "description": "Highlights first (and co-first) author publications on Google Scholar.",
  "content_scripts": [
    {
        "matches": ["*://scholar.google.com/*", "*://scholar.google.co.uk/*", "*://scholar.google.fr/*", "*://scholar.google.es/*", "*://scholar.google.ch/*", "*://scholar.google.de/*", "*://scholar.google.ca/*", "*://scholar.google.sg/*", "*://scholar.google.il/*", "*://scholar.google.au/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }
  ],
   "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
